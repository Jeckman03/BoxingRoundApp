<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BoxingRoundApp.ViewModel"
             x:Class="BoxingRoundApp.MainPage"
             Title="Boxing Round App">

    <Grid RowDefinitions="auto, *"
          ColumnDefinitions="*, auto">

        <Label Grid.Row="0"
               Grid.Column="0"
               Text="Routines" />

        <Button Grid.Row="0"
                Grid.Column="1"
                Text="Create New Routine" />

        <CollectionView Grid.RowSpan="2"
                        Grid.Column="1"
                        ItemsSource="{Binding WorkoutProfiles}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="*, *"
                          ColumnDefinitions="*, *">
                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="{Binding this}" />
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               Text="Rounds" />
                        <Label Grid.RowSpan="2"
                               Grid.Column="1"
                               Text="Total Time" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


    </Grid>

</ContentPage>
